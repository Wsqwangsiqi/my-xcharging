.header {
  height: 30px;
  padding: 0 15px; }

.charging-box {
  padding: 0 15px;
  margin-bottom: 10px; }
  .charging-box .charging-info {
    height: 120px;
    border: 1px solid #eee; }
    .charging-box .charging-info .chrarging-header {
      height: 30px;
      padding: 0 15px; }
      .charging-box .charging-info .chrarging-header .bottom-line {
        border-bottom: 1px solid #eee;
        height: 30px;
        line-height: 30px;
        color: #999999; }
    .charging-box .charging-info .charging-content {
      padding: 0 15px; }
      .charging-box .charging-info .charging-content .total {
        height: 55px;
        line-height: 55px;
        color: #8dc932;
        font-size: 23px; }
      .charging-box .charging-info .charging-content .time {
        height: 35px;
        line-height: 35px;
        font-size: 14px;
        color: #999999; }
